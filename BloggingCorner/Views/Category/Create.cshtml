@model BloggingCorner.Models.Category

<div class="container my-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow-lg border-0">
                <div class="d-flex justify-content-between align-items-center p-3">
                    <h4 class="mb-0">Create Category</h4>
                    <a asp-action="Index" class="btn btn-primary rounded-pill px-3">Back to List</a>
                </div>
                <hr />
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <!-- Validation -->
                        <div id="errorCard" class="alert alert-warning d-none">
                            <h6 class="alert-heading">Please fix the following:</h6>
                            <div asp-validation-summary="All" class="text-danger"></div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Category Name</label>
                            <input asp-for="Name" class="form-control bg-secondary text-black" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control bg-secondary text-black" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary px-4 rounded-pill">Create</button>
                            <a asp-action="Index" class="btn btn-secondary rounded-pill px-4">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Show validation errors dynamically
        document.addEventListener("DOMContentLoaded", function () {
            const errorCard = document.getElementById("errorCard");

            const observer = new MutationObserver(() => {
                if (errorCard.querySelector("ul") && errorCard.querySelector("ul").children.length > 0) {
                    errorCard.classList.remove("d-none");
                    setTimeout(() => {
                        errorCard.classList.add("d-none");
                    }, 4000);
                }
            });

            observer.observe(errorCard, { childList: true, subtree: true });
        });
    </script>
}
