@model AuthViewModel
@{
    ViewData["Title"] = "Welcome";
    Layout = "_LoginLayout"; // Or your dedicated auth layout
    var containerClass = Model.IsRegisterActive ? "right-panel-active" : "";
}

<div class="auth-container @containerClass" id="auth-container">

    <!-- Register Form Partial -->
    <partial name="_RegisterPartial" model="Model.Register" />

    <!-- Login Form Partial -->
    <partial name="_LoginPartial" model="Model.Login" />

    <div class="overlay-container">
        <div class="overlay">
            <div class="overlay-panel overlay-left">
                <h1>Welcome Back!</h1>
                <p>Enter your personal details to sign in</p>
                <button class="auth-button ghost" id="signIn">Sign In</button>
            </div>
            <div class="overlay-panel overlay-right">
                <h1>Hello, Friend!</h1>
                <p>Register with your personal details to get started</p>
                <button class="auth-button ghost" id="signUp">Sign Up</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}